<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="com.calcprogrammer1.calctunes"
      android:versionCode="0"
      android:versionName="0.47">
    <uses-sdk android:minSdkVersion="8" android:targetSdkVersion="14" />
	<uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
	<uses-permission android:name="android.permission.MODIFY_AUDIO_SETTINGS" />
	<uses-permission android:name="android.permission.INTERNET" />
	<uses-permission android:name="android.permission.RECORD_AUDIO" /> 
    <application android:icon="@drawable/icon"
        	android:label="@string/app_name"
        	android:hardwareAccelerated="true"
        	android:theme="@style/CalcTunesTheme" >
        
        <activity android:name=".Activities.CalcTunesActivity"
                  android:label="@string/app_name"
                  android:configChanges="keyboardHidden|orientation|screenSize">
                  
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />                
            </intent-filter>
            
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <action android:name="android.intent.action.PICK" />
                <category android:name="android.intent.category.BROWSABLE" />
                <category android:name="android.intent.category.DEFAULT" />
                <data android:mimeType="audio/*" />
            </intent-filter>
        </activity>
        
		<activity android:name=".Activities.CalcTunesLibraryBuilderActivity"
		    	  android:configChanges="keyboardHidden|orientation|screenSize">
		</activity>

		<activity android:name=".Activities.CalcTunesSubsonicBuilderActivity"
		    	  android:configChanges="keyboardHidden|orientation|screenSize">
		</activity>
				
		<activity android:name=".Activities.CalcTunesSettingsActivity"
		    	  android:configChanges="keyboardHidden|orientation|screenSize">
		</activity>
		
		<activity android:name=".Activities.CalcTunesMediaInfoActivity"
		    	  android:configChanges="keyboardHidden|orientation|screenSize">
		</activity>
		
		<service android:name="com.calcprogrammer1.calctunes.ContentPlaybackService" />
				
		<receiver android:name="com.calcprogrammer1.calctunes.MediaPlayer.RemoteControlReceiver">
    		<intent-filter>
        		<action android:name="android.intent.action.MEDIA_BUTTON" />
    		</intent-filter>
		</receiver>
    </application>
</manifest>