<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="com.calcprogrammer1.calctunes"
      android:versionCode="0"
      android:versionName="0.28">
    <uses-sdk android:minSdkVersion="10" />
	<uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
	<uses-permission android:name="android.permission.MODIFY_AUDIO_SETTINGS" />
    <application android:icon="@drawable/icon" android:label="@string/app_name">
        
        <activity android:name="com.calcprogrammer1.calctunes.CalcTunesActivity"
                  android:label="@string/app_name"
                  android:configChanges="keyboardHidden|orientation">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />                
            </intent-filter>
        </activity>
        
		<activity android:name="com.calcprogrammer1.calctunes.LibraryBuilderActivity"
		    	  android:configChanges="keyboardHidden|orientation">
		</activity>
		
		<activity android:name="com.calcprogrammer1.calctunes.CalcTunesSettingsActivity"
		    	  android:configChanges="keyboardHidden|orientation">
		</activity>
		
		<receiver android:name="RemoteControlReceiver">
    		<intent-filter>
        		<action android:name="android.intent.action.MEDIA_BUTTON" />
    		</intent-filter>
		</receiver>
    </application>

</manifest>