<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
     xmlns:android="http://schemas.android.com/apk/res/android"
     android:layout_height="match_parent"
     android:layout_width="match_parent"
     android:orientation="vertical"
     android:weightSum="1" >
    
	<RelativeLayout
	    android:layout_width="match_parent"   
	    android:layout_height="40dip"
	    android:orientation="horizontal"
	   	android:background="@color/holo_dark_background" >
	   	
	    <LinearLayout
		    android:layout_width="wrap_content"
		    android:layout_height="40dip"
		    android:orientation="horizontal" >
		    
			<ImageView
			    android:id="@+id/title_icon"
			    android:layout_width="40dip"
			    android:layout_height="40dip"
			    android:paddingRight="5dip"
			    android:src="@drawable/icon"/>
	
			<TextView
			    android:id="@+id/title_text"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:layout_gravity="center_vertical"
			    android:text="@string/app_name"
			    android:textAppearance="?android:attr/textAppearanceMedium" />
		</LinearLayout>
		
		<LinearLayout
		    android:layout_width="wrap_content"
		    android:layout_height="40dip"
		    android:layout_alignParentRight="true"
		    android:orientation="horizontal" >

			<ImageButton
			    android:id="@+id/button_menu_settings"
			    android:layout_width="40dip"
			    android:layout_height="40dip"
			    android:background="@android:color/transparent"
			    android:onClick="ButtonSettingsClick"
			    android:scaleType="centerInside"
			    android:src="@drawable/ic_menu_preferences" />
			
			<ImageButton
			    android:id="@+id/button_menu_minimize"
			    android:layout_width="40dip"
			    android:layout_height="40dip"
			    android:background="@android:color/transparent"
			    android:onClick="ButtonMinimizeClick"
			    android:scaleType="centerInside"
			    android:src="@drawable/button_minimize" />

			<ImageButton
			    android:id="@+id/button_menu_exit"
			    android:layout_width="40dip"
			    android:layout_height="40dip"
			    android:background="@android:color/transparent"
			    android:onClick="ButtonExitClick"
			    android:scaleType="centerInside"
			    android:src="@drawable/button_exit" />					
		</LinearLayout>
 
	</RelativeLayout>
	
	<View
	    android:id="@+id/title_border"
	    android:layout_width="match_parent"
	    android:layout_height="2px"
	    android:background="#555" >
	</View>
		
	<com.github.ysamlan.horizontalpager.HorizontalPager
	    android:id="@+id/horizontal_pager"
	    android:layout_width="match_parent"
	    android:layout_height="0dip"
	    android:background="#000"
	    android:layout_weight="1">
    
	    <FrameLayout
			android:id="@+id/sourceListFragmentContainer"
			android:layout_width="match_parent"
			android:layout_height="wrap_content" />

	    <FrameLayout
	        android:id="@+id/contentListFragmentContainer"
	        android:layout_width="match_parent"
	        android:layout_height="fill_parent" />

	    <FrameLayout
	        android:id="@+id/mediaInfoContainer"
	        android:layout_width="match_parent"
	        android:layout_height="fill_parent" />
	    
	</com.github.ysamlan.horizontalpager.HorizontalPager>
	    
	<FrameLayout
		android:id="@+id/nowPlayingContainer"
		android:layout_width="match_parent"
		android:layout_height="wrap_content" />
	
</LinearLayout>