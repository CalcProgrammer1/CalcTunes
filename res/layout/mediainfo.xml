<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

	<LinearLayout
	    android:layout_width="wrap_content"
	    android:layout_height="30dip"
	    android:orientation="horizontal" >

	    <ImageView
	        android:id="@+id/imageView1"
	        android:layout_width="30dip"
	        android:layout_height="30dip"
	        android:paddingRight="5dip"
	        android:src="@drawable/icon" />

	    <TextView
	        android:id="@+id/textView1"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_gravity="center_vertical"
	        android:text="@string/app_name"
	        android:textAppearance="?android:attr/textAppearanceMedium" />
	</LinearLayout>

	<View
	    android:id="@+id/title_border"
	    android:layout_width="match_parent"
	    android:layout_height="1px"
	    android:background="#555" >
	</View>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/mediaInfoAlbumArt"
                android:layout_width="250dip"
                android:layout_height="256dip"
                android:src="@drawable/icon" />
			
			<View
			    android:layout_width="match_parent"
			    android:layout_height="1px"
			    android:background="#555" >
			</View>
			
            <ImageView
                android:id="@+id/mediaInfoFormatLogo"
                android:layout_width="match_parent"
                android:layout_height="50dip"
                android:background="@android:color/black" />

            <View
			    android:layout_width="match_parent"
			    android:layout_height="1px"
			    android:background="#555" >
			</View>
        </LinearLayout>

        <View android:layout_width="1px"
	    		android:layout_height="match_parent"
	    		android:background="#555" >
        </View>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/mediaInfoTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Track Title: Title"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <TextView
                android:id="@+id/mediaInfoArtist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Track Artist: Artist"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <TextView
                android:id="@+id/mediaInfoAlbum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Track Album: Album"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <TextView
                android:id="@+id/mediaInfoGenre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Track Genre: Genre"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <TextView
                android:id="@+id/mediaInfoYear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Track Year: Year"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <TextView
                android:id="@+id/mediaInfoTrack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Track Number: 1 of 12"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <TextView
                android:id="@+id/mediaInfoDisc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Track Disc: 1 of 3"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <TextView
                android:id="@+id/mediaInfoFormat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Track Format: Format"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <TextView
                android:id="@+id/mediaInfoBitrate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Track Bitrate: Bitrate"
                android:textAppearance="?android:attr/textAppearanceMedium" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>