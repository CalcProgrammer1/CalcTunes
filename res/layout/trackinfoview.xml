<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >
	<View
	    android:layout_width="1px"
	    android:layout_height="match_parent" />
	
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.2" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/track_artwork"
                android:layout_height="100dip"
                android:layout_width="100dip"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/icon" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@color/holo_dark_background" >
				
                <TextView
                    android:layout_width="200dip"
                    android:layout_height="wrap_content"
                    android:text="Title" />

                <TextView
                    android:id="@+id/track_title"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Example Song Title" />             
            </LinearLayout>
            
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >
				
                <TextView
                    android:layout_width="200dip"
                    android:layout_height="wrap_content"
                    android:text="Album" />

                <TextView
                    android:id="@+id/track_album"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Example Album Name" />             
            </LinearLayout>
            
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@color/holo_dark_background" >
				
                <TextView
                    android:layout_width="200dip"
                    android:layout_height="wrap_content"
                    android:text="Artist" />

                <TextView
                    android:id="@+id/track_artist"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Example Artist" />             
            </LinearLayout>
            
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >
				
                <TextView
                    android:layout_width="200dip"
                    android:layout_height="wrap_content"
                    android:text="Track Number" />

                <TextView
                    android:id="@+id/track_number"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Example Track Number" />             
            </LinearLayout>
            
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@color/holo_dark_background" >
				
                <TextView
                    android:layout_width="200dip"
                    android:layout_height="wrap_content"
                    android:text="Disc Number" />

                <TextView
                    android:id="@+id/track_disc"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Example Disc Number" />             
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>