<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/librarylistartist_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Artist"
        android:textAppearance="?android:attr/textAppearanceLarge" />
    
    <TextView
        android:id="@+id/librarylistalbum_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Album"
        android:textAppearance="?android:attr/textAppearanceMedium" 
        android:paddingLeft="20dip"/>

	<RelativeLayout
	    android:id="@+id/librarylistsong_frame" 
	    xmlns:android="http://schemas.android.com/apk/res/android"
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:orientation="horizontal" >
	    
		<LinearLayout
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:orientation="horizontal"
		    android:layout_alignParentLeft="true" >
		    
		    <TextView
		        android:id="@+id/librarylistsong_num"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:text="#"
		        android:paddingLeft="40dip" />
		
		    <TextView
		    android:id="@+id/librarylistsong_text"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:text="Song"
		    android:textAppearance="?android:attr/textAppearanceSmall" 
		    android:paddingLeft="7dip"/>
		</LinearLayout>
	
	    <TextView
	        android:id="@+id/librarylistsong_time"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentRight="true"
	        android:text="00:00"
	        android:paddingRight="2dip"
	        android:textAppearance="?android:attr/textAppearanceSmall" />
	
	</RelativeLayout>
</LinearLayout>